<https-client-1-jobfile>
  <request url="https://www.example.org/some/path" method="POST">
    <header>
      <field name="Content-Type" value="application/xml"/>
      <field name="charset" value="utf-8"/>
    </header>
    <data source="./input_data.xml"/>
    <!--
      Only set this if the certificate should be considered valid for a different host as
      well for testing purposes. In other cases, leaving this setting activated might lead
      to the acceptance of every certificate for the host configured here, WHICH WILL
      BREAK SECURITY!
    -->
    <!-- accept-host-for-certificate-mismatch host="debug.example.org"/ -->
  </request>
  <result destination="./output_data.xml"/>
</https-client-1-jobfile>
