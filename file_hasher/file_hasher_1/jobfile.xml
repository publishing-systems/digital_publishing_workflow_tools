<file-hasher-1-jobfile>
  <input>
    <file path="./input"/>
  </input>
  <settings>
    <!-- Use "MD5", "SHA-1" or "SHA-256". -->
    <hash-algorithm use="MD5"/>
  </settings>
  <output>
    <result-file path="./result.xml"/>
  </output>
</file-hasher-1-jobfile>
